<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="175dp" >

        <!-- 调用自己原生的的viewpage -->

        <com.itheima62.smartbj.view.InterceptScrollViewPager
            android:id="@+id/vp_tpi_news_lunbo_pic"
            android:layout_width="fill_parent"
            android:layout_height="175dp" >
        </com.itheima62.smartbj.view.InterceptScrollViewPager>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#44000000" >

            <TextView
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:id="@+id/tv_tpi_news_pic_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="onenight in 北京" />
            
	       <LinearLayout 
	           android:orientation="horizontal"
	           android:id="@+id/ll_tpi_news_pic_points"
	           android:paddingRight="8dp"
	           android:layout_alignParentRight="true"
	           android:layout_centerVertical="true"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"></LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
   <ListView 
       android:cacheColorHint="#00000000"
       android:id="@+id/lv_tpi_news_listnews"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       ></ListView> 

</LinearLayout>